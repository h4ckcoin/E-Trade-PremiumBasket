@model ProductModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Product Details";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Message"] != null)
{
    <p class="text-success">@TempData["Message"]</p>
}

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.UnitPriceDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.UnitPriceDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.StockAmount)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.StockAmount) units
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.ExpirationDateDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.ExpirationDateDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.CategoryNameDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.CategoryNameDisplay)
        </dd>

        <dt class="col-2">
            @Html.DisplayNameFor(model => model.StoreNamesDisplay)
        </dt>
        <dd class="col-10">
            @Html.Raw(Model.StoreNamesDisplay)
        </dd>

        <dt class="col-2">
            @Html.DisplayNameFor(model => model.ImgSrcDisplay)
        </dt>
        <dd class="col-4">
            @if (Model.ImgSrcDisplay is not null)
            {
                <img src="@Model.ImgSrcDisplay" class="img-fluid" />
            }
        </dd>

    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>  <text>&nbsp;|&nbsp;</text>
        <a asp-action="Index">Back to List</a>
        @*<a asp-action="Edit" asp-route-id="@product.Id">Edit</a>*@
    }
    @if (User.IsInRole("User"))
    {
        <a asp-action="Index">Back to List</a>
    }
</div>
